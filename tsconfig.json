{
  "compilerOptions": {
    "rootDir": "src",
    "module": "commonjs",
    "declaration": true,
    "noImplicitAny": false,
    "noUnusedLocals": false,
    "removeComments": true,
    "noLib": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2018",
    "outDir": "./lib",
    "strict": true,
    "sourceMap": true,
    "allowJs": false,
    "skipLibCheck": false,
    "composite": true,
    "paths": {
      "@signati/signati-sdk-node": [
        "src"
      ]
    }
  },
  "include": [
    "src"
  ],
  "exclude": ["node_modules","lib", "**/__tests__/*"],
  "references": [
    {"path": "crud"},
    {"path": "util" }
  ]
}

